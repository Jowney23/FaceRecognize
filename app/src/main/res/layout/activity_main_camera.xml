<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_colorBlack">

    <com.open.face.view.ColorPreviewTextureView
        android:id="@+id/amc_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.open.face.view.FaceCoveringCircleView
        android:id="@+id/amc_face_detect_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/amc_lottie_eyes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@color/common_colorBlack"
            app:lottie_fileName="lottie_eyes.json" />


</androidx.constraintlayout.widget.ConstraintLayout>